<div class="container">
  <div class="row">
    <h2>Follows Users</h2>

    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
        </tr>
      </thead>
      <tbody><!--フォローしてる人の情報を取得できていない-->
        <% @users.each do |user| %>
        <tr>
          <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: 'no_image.jpg' %></td>
          <td><%= user.name %></td>
          <td>フォロー数: </td>
          <td>フォロワー数: </td>
          <td><%= link_to 'フォローを外す', user_relationships_path(user), method: :delete %></td><!--リンク-->
        </tr>
        <% end %>

      </tbody>
    </table>

  </div>


</div>

